{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "paths": {
      "three/addons/lines/*": ["./node_modules/@types/three/examples/jsm/lines/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": ["vite-plugin-svgr/client", "@types/dom-webcodecs"]
  },
  "include": ["src", "tests", "env.d.ts", "__mocks__"],
  "exclude": ["dist"]
}
